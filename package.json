{
	"name": "YTMusic",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"dependencies": {
		"caramel-puppy": "^1.0.0",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"ffmpeg-on-progress": "^1.0.0",
		"fluent-ffmpeg": "^2.1.2",
		"node-id3": "^0.1.11",
		"request": "^2.88.0",
		"request-progress": "^3.0.0",
		"socket.io": "^2.3.0",
		"ytdl-core": "^1.0.3"
	},
	"scripts": {
		"start": "node backend/index.js",
		"deploy-web": "node webDeploy.js && minify-cli start && workbox generateSW workbox-config.js && firebase deploy --token $FIREBASE_TOKEN",
		"back": "nodemon backend/index.js --config nodemon-back.json",
		"web":"firebase serve",
		"download-env": "heroku config -s -a ytmdown > .env"
	},
	"devDependencies": {
		"firebase-tools": "^7.13.1",
		"minify-cli": "^1.0.0",
		"nodemon": "^2.0.2",
		"workbox-cli": "^4.3.1"
	},
	"minify-cli": {
		"src": "web/src",
		"dest": "web/public",
		"copyAll": true,
		"files": {
			"html": [
				"about.html",
				"index.html"
			],
			"css": [
				"libraes/mdc.css",
				"styles/darkMode.css",
				"styles/style.css"
			],
			"js": [
				"libraes/vue.js",
				"scripts/albumScreen.js",
				"scripts/albumsScreen.js",
				"scripts/fab.js",
				"scripts/loadingScreen.js",
				"scripts/lyricsScreen.js",
				"scripts/progressBar.js",
				"scripts/topAppBar.js",
				"scripts/urlScreen.js"
			]
		}
	}
}
